{% comment %}
  Main navigation
{% endcomment %}
<header class="bg-white shadow-sm">
  <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
    <div class="text-2xl font-bold"> {{name}} </div>
    <div class="space-x-4">
      <a href="#" class="text-gray-600 hover:text-gray-900">Bags</a>
      <a href="#" class="text-gray-600 hover:text-gray-900">Shoes</a>
      <a href="#" class="text-gray-600 hover:text-gray-900">Lookbook</a>
    </div>
    <div class="flex items-center space-x-4">
      <a href="#" class="text-gray-600 hover:text-gray-900">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </a>
      <a href="#" class="text-gray-600 hover:text-gray-900">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </a>
    </div>
  </nav>
</header>

{% comment %}
  Hero section
{% endcomment %}
<section class="relative h-96 bg-gray-200">
  <img src="https://placeholder.com/1920x1080" alt="Hero image" class="w-full h-full object-cover">
  <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center text-white">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-4">Industrial design meets fashion.</h1>
      <a href="#" class="bg-white text-black px-6 py-2 rounded-full hover:bg-gray-200 transition">Shop now</a>
    </div>
  </div>
</section>

{% comment %}
  Featured products section
{% endcomment %}
<section class="container mx-auto px-4 py-16">
  <h2 class="text-2xl font-bold mb-8">Obsessive Attention. Intelligent Effort.</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    {% for i in (1..8) %}
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <img src="https://placeholder.com/300x300" alt="Product {{ i }}" class="w-full h-64 object-cover">
        <div class="p-4">
          <h3 class="font-semibold mb-2">Product {{ i }}</h3>
          <p class="text-gray-600">$199.99 CAD</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% comment %}
  Back in stock section
{% endcomment %}
<section class="container mx-auto px-4 py-16">
  <h2 class="text-2xl font-bold mb-8">Back in stock!</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="bg-gray-100 p-8 rounded-lg">
      <img src="https://placeholder.com/600x400" alt="Back in stock product" class="w-full h-64 object-cover rounded-lg mb-4">
      <h3 class="font-semibold mb-2">Featured Product</h3>
      <p class="text-gray-600">$299.99 CAD</p>
    </div>
    <div class="grid grid-cols-2 gap-4">
      {% for i in (1..4) %}
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <img src="https://placeholder.com/300x300" alt="Product {{ i }}" class="w-full h-40 object-cover">
          <div class="p-4">
            <h3 class="font-semibold mb-2">Product {{ i }}</h3>
            <p class="text-gray-600">$149.99 CAD</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

